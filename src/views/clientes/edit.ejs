<h1 class="page-title">Editar Cliente</h1>

<form class="form-styled" action="/clientes/<%= cliente.id %>?_method=PUT" method="post">
    <div class="form-group">
        <label class="form-label" for="nombre">Nombre:</label>
        <input class="form-input form-input-text" type="text" name="nombre" id="nombre" value="<%= cliente.nombre %>" required>
    </div>
    
    <div class="form-group">
        <label class="form-label" for="apellido">Apellido:</label>
        <input class="form-input form-input-text" type="text" name="apellido" id="apellido" value="<%= cliente.apellido %>" required>
    </div>

    <div class="form-group">
        <label class="form-label" for="dni">DNI:</label>
    <input class="form-input form-input-text" type="text" name="dni" id="dni" value="<%= cliente.dni %>" required maxlength="8">
    </div>

    <div class="form-group">
        <label class="form-label" for="telefono">Tel√©fono:</label>
    <input class="form-input form-input-text" type="text" name="telefono" id="telefono" value="<%= cliente.telefono %>" required maxlength="9">
    </div>

    <div class="form-group">
        <label class="form-label" for="correo">Correo:</label>
        <input class="form-input form-input-email" type="email" name="correo" id="correo" value="<%= cliente.email %>" required>
    </div>

    <button class="action-button submit-button" type="submit">Guardar</button>
</form>