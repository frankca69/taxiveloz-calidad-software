<% if (typeof error !== 'undefined' && error) { %>
    <p class="error-message"><%= error %></p>
<% } %>

<div class="container">
  <h2 class="page-title">Iniciar Sesión</h2>

  <form action="/sessions/login" method="POST" class="form-styled">
    <div class="form-group">
      <label for="username" class="form-label">Usuario:</label>
      <input type="text" name="username" class="form-input" required>
    </div>
    <div class="form-group">
      <label for="password" class="form-label">Contraseña:</label>
      <input type="password" name="password" class="form-input" required>
    </div>
    <button type="submit" class="btn btn-primary submit-button">Ingresar</button>
  </form>

  <p><a href="/sessions/registerc" class="action-link">¿No tienes cuenta? Regístrate como cliente</a></p>
</div>


