<div class="container dashboard-container">
    <h1 class="dashboard-title">Bienvenido Admin, <%= user.username %></h1>
    <p class="dashboard-subtitle">Panel de Administración del Sistema.</p>

    <!-- Flash Messages -->
    <% if (locals.messages && messages.success) { %>
      <div class="alert alert-success" role="alert"><%= messages.success %></div>
    <% } %>
    <% if (locals.messages && messages.error) { %>
      <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <div class="alert alert-success" role="alert"><%= success_msg %></div>
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg) { %>
        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
    <% } %>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <h3>Gestión General</h3>
            <div class="dashboard-actions-container">
                <a href="/clientes" class="btn btn-primary dashboard-button">Gestionar Clientes</a>
                <a href="/reservas" class="btn btn-primary dashboard-button">Gestionar Reservas</a>
                <!-- Add more admin-specific actions here if needed -->
            </div>
        </div>

        <div class="dashboard-card">
            <h3>Cuenta</h3>
            <div class="dashboard-actions-container">
                <a href="/admin/profile/<%= user.profile_id %>/edit" class="btn btn-secondary dashboard-button">Editar Cuenta</a>
                <form action="/sessions/logout" method="POST" class="logout-form-dashboard" style="display: inline;">
                    <button type="submit" class="btn dashboard-button logout-button">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>
