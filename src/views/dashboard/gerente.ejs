<div class="container dashboard-container">
    <h1 class="dashboard-title">Bienvenido Gerente, <%= user.username %></h1>
    <p class="dashboard-subtitle">Panel de Gerencia y Supervisión.</p>

    <!-- Flash Messages -->
    <% if (locals.messages && messages.success) { %>
      <div class="alert alert-success" role="alert"><%= messages.success %></div>
    <% } %>
    <% if (locals.messages && messages.error) { %>
      <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <div class="alert alert-success" role="alert"><%= success_msg %></div>
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg) { %>
        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
    <% } %>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <h3>Operaciones Principales</h3>
            <div class="dashboard-actions-container">
                <a href="/vehiculos" class="btn btn-primary dashboard-button">Gestionar Vehículos</a>
                <a href="/reportes/generar" class="btn btn-info dashboard-button">Generar Reporte</a>
            </div>
        </div>

        <div class="dashboard-card">
            <h3>Gestión de Entidades</h3>
            <div class="dashboard-actions-container">
                <a href="/admin/usuarios" class="btn btn-secondary dashboard-button">Gestionar Usuarios</a>
                <a href="/admin/reservas" class="btn btn-secondary dashboard-button">Gestionar Reservas</a>
                <!-- The old links like /clientes, /choferes, /admins, /gerentes are consolidated under /admin/usuarios if user management is centralized -->
                <!-- Or they could be listed here if they point to specific filtered views: -->
                <!-- <a href="/clientes" class="btn btn-light dashboard-button">Ver Clientes (Lista)</a> -->
                <!-- <a href="/choferes" class="btn btn-light dashboard-button">Ver Choferes (Lista)</a> -->
            </div>
        </div>

        <div class="dashboard-card">
            <h3>Cuenta</h3>
            <div class="dashboard-actions-container">
                <form action="/sessions/logout" method="POST" class="logout-form-dashboard" style="display: inline;">
                    <button type="submit" class="btn dashboard-button logout-button">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>
