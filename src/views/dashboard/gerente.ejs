<div class="container dashboard-container">
    <h1 class="dashboard-title">Bienvenido Gerente, <%= user.username %></h1>
    <p class="dashboard-subtitle">Panel de Gerencia y Supervisión.</p>

    <!-- Flash Messages -->
    <% if (locals.messages && messages.success) { %>
      <div class="alert alert-success" role="alert"><%= messages.success %></div>
    <% } %>
    <% if (locals.messages && messages.error) { %>
      <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <div class="alert alert-success" role="alert"><%= success_msg %></div>
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg) { %>
        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
    <% } %>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <h3>Operaciones Principales</h3>
            <div class="dashboard-actions-container">
                <a href="/vehiculos/all" class="btn btn-primary dashboard-button">Ver Vehículos</a>
                <a href="/reservas" class="btn btn-primary dashboard-button">Gestionar Reservas</a>
                <a href="/reportes/generar" class="btn btn-primary dashboard-button">Generar Reporte</a>
            </div>
        </div>

        <div class="dashboard-card">
            <h3>Gestión de Usuarios</h3>
            <div class="dashboard-actions-container">
                <a href="/clientes" class="btn btn-secondary dashboard-button">Gestionar Clientes</a>
                <a href="/admins" class="btn btn-secondary dashboard-button">Gestionar Administradores</a>
                <a href="/choferes" class="btn btn-secondary dashboard-button">Gestionar Choferes</a>
                <a href="/gerentes" class="btn btn-secondary dashboard-button">Gestionar Gerentes</a>
            </div>
        </div>

        <div class="dashboard-card">
            <h3>Cuenta</h3>
            <div class="dashboard-actions-container">
                <a href="/gerente/<%= user.profile_id %>/edit" class="btn btn-secondary dashboard-button">Editar Cuenta</a>
                <form action="/sessions/logout" method="POST" class="logout-form-dashboard" style="display: inline;">
                    <button type="submit" class="btn dashboard-button logout-button">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>
