
    <div class="container reservas-list-container">
        <h1 class="page-title">Reservaciones de <%= reservations && reservations.length > 0 ? reservations[0].nombre_cliente + ' ' + reservations[0].apellido_cliente : 'Client' %></h1>
        <table class="content-table">
            <thead class="table-header">
                <tr>
                    <th class="reservas-table-header">Fecha</th>
                    <th class="reservas-table-header">Hora Inicio</th>
                    <th class="reservas-table-header">Chofer</th>
                    <th class="reservas-table-header">Origen</th>
                    <th class="reservas-table-header">Tarifa</th>
                    <th class="reservas-table-header">Tipo Pago</th>
                    <th class="reservas-table-header">Estado</th>
                    <th class="reservas-table-header">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (reservations && reservations.length > 0) { %>
                    <% reservations.forEach(reserva => { %>
                        <tr>
                            <td class="reservas-table-cell"><%= new Date(reserva.fecha).toLocaleDateString('es-ES', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                            <td class="reservas-table-cell"><%= new Date('1970-01-01T' + reserva.hora_inicio).toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', hour12: false }) %></td>
                            <td class="reservas-table-cell"><%= reserva.nombre_chofer %> <%= reserva.apellido_chofer %></td>
                            <td class="reservas-table-cell"><%= reserva.origen %></td>
                            <td class="reservas-table-cell"><%= reserva.tarifa.toLocaleString('es-ES', { style: 'currency', currency: 'EUR' }) %></td>
                            <td class="reservas-table-cell"><%= reserva.tipo_pago %></td>
                            <td class="reservas-table-cell"><%= reserva.estado_reserva %></td>
                            <td class="reservas-table-cell"><a href="/reservas/<%= reserva.id_reserva %>" class="btn btn-sm btn-info d-block">Detalles</a></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="8">No hay reservaciones para este cliente.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/reservas/cliente/<%= clienteId %>?page=<%= currentPage - 1 %>">Anterior</a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link">Anterior</span>
                        </li>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (i === currentPage) { %>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link"><%= i %></span>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="/reservas/cliente/<%= clienteId %>?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/reservas/cliente/<%= clienteId %>?page=<%= currentPage + 1 %>">Siguiente</a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link">Siguiente</span>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
        <% if (totalItems > 0) { %>
            <p class="pagination-info">Mostrando <%= reservations.length %> de <%= totalItems %> reservas para <%= clienteNombre %>.</p>
        <% } %>
    </div>

