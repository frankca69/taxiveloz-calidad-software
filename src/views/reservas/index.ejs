
    <div class="container reservas-list-container">
        <h1 class="page-title">Reservaciones</h1>
        <a href="/reservas/create" class="btn btn-primary mb-3">Crear Reserva</a>
        <table class="content-table">
            <thead class="table-header">
                <tr>
                    <th class="reservas-table-header">ID</th>
                    <th class="reservas-table-header">Fecha</th>
                    <th class="reservas-table-header">Hora de inicio</th>
                    <th class="reservas-table-header">Hora de fin</th>
                    <th class="reservas-table-header">Estado</th>
                    <th class="reservas-table-header">Cliente</th>
                    <th class="reservas-table-header">Conductor</th>
                    <th class="reservas-table-header">Vehiculo</th>
                    <th class="reservas-table-header">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (reservations && reservations.length > 0) { %>
                    <% reservations.forEach(reserva => { %>
                        <tr>
                            <td class="reservas-table-cell"><%= reserva.id_reserva %></td>
                            <td class="reservas-table-cell"><%= new Date(reserva.fecha).toLocaleDateString('es-ES', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                            <td class="reservas-table-cell"><%= new Date('1970-01-01T' + reserva.hora_inicio).toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', hour12: false }) %></td>
                            <td class="reservas-table-cell"><%= new Date('1970-01-01T' + reserva.hora_fin).toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', hour12: false }) %></td>
                            <td class="reservas-table-cell"><%= reserva.estado_reserva %></td>
                            <td class="reservas-table-cell"><%= reserva.nombre_cliente %> <%= reserva.apellido_cliente %></td>
                            <td class="reservas-table-cell"><%= reserva.nombre_chofer %> <%= reserva.apellido_chofer %></td>
                            <td class="reservas-table-cell"><%= reserva.modelo_vehiculo %> (<%= reserva.placa_vehiculo %>)</td>
                            <td class="reservas-table-cell">
                                <a href="/reservas/<%= reserva.id_reserva %>" class="btn btn-sm btn-info mb-1 d-block">Detalles</a>

                                <% if (typeof user !== 'undefined' && (user.rol === 'admin' || user.rol === 'gerente')) { %>
                                  <a href="/reservas/edit/<%= reserva.id_reserva %>" class="btn btn-sm btn-warning mb-1 d-block">Editar</a>
                                <% } %>

                                <% if (reserva.estado_reserva === 'confirmada' && typeof user !== 'undefined' && (user.rol === 'admin' || user.rol === 'gerente')) { %>
                                    <form action="/reservas/<%= reserva.id_reserva %>/notificar" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-success mb-1 d-block w-100">Notificar</button>
                                    </form>
                                <% } %>

                                <form action="/reservas/<%= reserva.id_reserva %>/eliminar" method="POST" style="display: inline;" onsubmit="return confirm('¿Está seguro de que desea eliminar esta reserva?');">
                                    <button type="submit" class="btn btn-sm btn-danger d-block w-100">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="9">No se encontro Reservas</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="/reservas?page=<%= currentPage - 1 %>">Anterior</a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link">Anterior</span>
                        </li>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (i === currentPage) { %>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link"><%= i %></span>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="/reservas?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="/reservas?page=<%= currentPage + 1 %>">Siguiente</a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link">Siguiente</span>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
        <% if (totalItems > 0) { %>
          <p class="text-center">Mostrando <%= reservations.length %> de <%= totalItems %> reservas.</p>
        <% } %>
    </div>

